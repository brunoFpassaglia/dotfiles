syntax on

set noerrorbells
set tabstop=4 softtabstop=4
set shiftwidth=4
set rnu
set nowrap
set smartcase
set noswapfile
set nobackup
set undodir=~/.vim/undodir
set undofile
set incsearch
set colorcolumn=80
highlight Column ctermbg=0 guibg=lightgrey

"power line""

:set laststatus=2
let g:Powerline_symbols = 'fancy'

