#shutdown, reboot and lock screen
set $Locker i3lock

set $mode_system System (l) lock, (e) logout, (s) suspend, (r) reboot, (Shift+s) shutdown (h) hibernate
mode "$mode_system" {
    bindsym l exec --no-startup-id i3lock -i ./Pictures/wallpapers/BVkgYv1.png -t -f, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id i3lock -i ./Pictures/wallpapers/BVkgYv1.png -t -f && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id i3lock -i ./Pictures/wallpapers/BVkgYv1.png -t -f && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Pause mode "$mode_system"

set $monitor_mode External (a) 600x800, (b) 2560x1080
mode"$monitor_mode" {
	bindsym a exec --no-startup-id xrandr --output HDMI1 --mode 800x600 --rate 75
	bindsym b exec --no-startup-id xrandr --output HDMI1 --mode 2560x1080 --rate 60
	# back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+KP_Add mode "$monitor_mode"

## Manual management of external displays
# Set the shortcuts and what they do
set $mode_display Ext Screen (v) VGA ON, (h) HDMI ON, (x) VGA OFF, (y) HDMI OFF
mode "$mode_display" {
    bindsym v exec --no-startup-id xrandr --output VGA1 --auto --right-of eDP1
    bindsym h exec --no-startup-id xrandr --output HDMI1 --auto --right-of eDP1
    bindsym x exec --no-startup-id xrandr --output VGA1 --auto --off
    bindsym y exec --no-startup-id xrandr --output HDMI1 --auto --off
    bindsym m exec --no-startup-id xrandr --output eDP1 --auto --off
    bindsym n exec --no-startup-id xrandr --output eDP1 --auto 


    # back to normal: Enter o Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
# Declare here the shortcut to bring the display selection menu
bindsym $mod+x mode "$mode_display"

